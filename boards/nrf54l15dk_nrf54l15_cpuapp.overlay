/*
 * IPC configuration for XIP memory layout
 * Shared memory region: 160KB (0x20010000-0x20038000)
 */

/ {
	soc {
		reserved-memory {
			#address-cells = <1>;
			#size-cells = <1>;

			// Shared IPC buffers within 160KB shared region
			// RX buffer: 1KB at start of shared memory
			sram_rx: memory@20010000 {
				reg = <0x20010000 0x400>;  // 1KB
			};

			// TX buffer: 1KB immediately after RX
			sram_tx: memory@20010400 {
				reg = <0x20010400 0x400>;  // 1KB
			};

			// Remaining 158KB (0x20010800-0x20038000) available for application buffers
		};
	};

	ipc {
		ipc0: ipc0 {
			compatible = "zephyr,ipc-icmsg";
			dcache-alignment = <32>;
			tx-region = <&sram_tx>;
			rx-region = <&sram_rx>;
			mboxes = <&cpuapp_vevif_rx 20>, <&cpuapp_vevif_tx 21>;
			mbox-names = "rx", "tx";
			status = "okay";
		};
	};
};

&cpuapp_vevif_rx {
	status = "okay";
};

&cpuapp_vevif_tx {
	status = "okay";
};
